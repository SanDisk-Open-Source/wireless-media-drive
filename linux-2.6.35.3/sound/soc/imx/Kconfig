config MXC_SSI_DUAL_FIFO
	bool "MXC SSI enable dual fifo"
	def_bool n
	depends on SND_MXC_SOC_SSI && (ARCH_MX51 || ARCH_MX53)
	help
	  Say Y if you want to use 2 ssi fifo for audio transfer,
	  NOTE: ONLY support MX51 and MX53.
endif
